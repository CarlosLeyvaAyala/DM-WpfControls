<UserControl x:Class="DM_WpfControls.Controls.IconRadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DM_WpfControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance local:IconRadioButton}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
  <RadioButton x:Name="rb" Style="{StaticResource MaterialDesignTabRadioButton}" Click="OnClick">
    <StackPanel x:Name="panel">
      <md:PackIcon x:Name="piIcon"
                   HorizontalAlignment="Center"
                   Kind="{Binding IconKind}" />
      <TextBlock x:Name="edtName"
                 Margin="0,4,0,0"
                 Text="OPTION" />
    </StackPanel>
  </RadioButton>
</UserControl>
